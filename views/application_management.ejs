<!DOCTYPE html>
<html>
<head>
  <title>Application Management</title>
  <link rel="stylesheet" href="/style/application_management.css">
  <style>
  </style>
</head>
<body>
    <%- include ('header_employee') %>
    <h2>Application Management</h2>
    <% i = 1%>
    <table>
        <tr>
          <th>Nomor</th>
          <th>Nama</th>
          <th>Jumlah Pinjaman</th>
          <th>Tanggal Pengajuan</th>
          <th>Detil</th>
        </tr>
        <% applications.forEach((app) => {%>
          <%const date = new Date(app.tanggal_pengajuan)%>

          <%const year = date.getFullYear()%>
          <%const month = String(date.getMonth() + 1).padStart(2, '0')%>
          <%const day = String(date.getDate()).padStart(2, '0')%>
          
          <%const formattedDate = `${year}-${month}-${day}`%>
          <tr>
            <td><%= i %></td>
            <td><%= app.nama_lengkap%></td>
            <td>Rp. <%= app.jumlah_pengajuan%></td>
            <td><%= formattedDate%></td>
            <td>
              <!-- <form action="/officer/application_management/detail">
                <input type="hidden" name="id_user_detail" value="<%= app.id_user%>">
                <button type="submit">Detil Form</button>
              </form> -->
              <a href="/officer/application_management/detail/<%=app.id%>">Detil</a>
            </td>
          </tr>
        <%})%>
    </table>
</body>
</html>